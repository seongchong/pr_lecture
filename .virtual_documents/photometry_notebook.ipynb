x = np.linspace(거리[0], 거리[-1], 500)
plt.plot(
    x,
    f_Ev(x, 광도, 옵셋),
)
plt.xlabel("거리 (m)")
plt.ylabel("광조도 (lx)")
plt.legend(["측정값", "fitting"])
plt.show()


